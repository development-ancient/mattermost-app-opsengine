{
    "app_id": "opsgenie",
    "version": "0.0.1",
    "homepage_url": "https://bitbucket.org/dominion-ancient/mattermost-app-opsgenie",
    "display_name": "OpsGenie",
    "description": "OpsGenie cloud app for Mattermost",
    "icon": "opsgenie.png",
    "bindings": {
        "path": "/bindings",
        "expand": {
            "acting_user": "all",
            "oauth2_app": "all",
            "oauth2_user": "all"
        }
    },
    "requested_permissions": [
        "act_as_user",
        "act_as_bot",
        "remote_webhooks",
        "remote_oauth2"
    ],
    "requested_locations": [
        "/command",
        "/channel_header",
        "/post_menu",
        "/in_post"
    ],
    "aws_lambda": {
        "functions": [
            {
                "path": "/",
                "name": "js-function",
                "handler": "index.handler",
                "runtime": "nodejs14.x"
            }
        ]
    },
    "http": {
        "use_jwt": false
    }
}
